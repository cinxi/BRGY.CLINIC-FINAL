<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Patient</title>
    <link rel="stylesheet" href="/css/staff/editPatient.css">
</head>
<body>
    <div class="container">
        <!-- Modal header with the close button -->
        <div class="modal-header">
            <span class="close">&times;</span> <!-- Close button (X) -->
        </div>

        <h2>Edit Patient Details</h2>
        <form action="/staff/editPatient/<%= patient.Patient_ID %>" method="POST">
            <div class="form-group">
                <label for="firstName">Firstname:</label>
                <input type="text" id="firstName" name="Patient_FirstName" value="<%= patient.Patient_FirstName %>" required>
            </div>
            <div class="form-group">
                <label for="lastName">Lastname:</label>
                <input type="text" id="lastName" name="Patient_LastName" value="<%= patient.Patient_LastName %>" required>
            </div>
            <div class="form-group">
                <label for="gender">Gender:</label>
                <select id="gender" name="Patient_Gender" required>
                    <option value="Male" <%= patient.Patient_Gender === 'Male' ? 'selected' : '' %>>Male</option>
                    <option value="Female" <%= patient.Patient_Gender === 'Female' ? 'selected' : '' %>>Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" name="DateofBirth" value="<%= patient.DateofBirth %>" required>
                
            </div>
            <div class="form-group">
                <label for="contactNumber">Contact Number:</label>
                <input type="tel" id="contactNumber" name="Patient_ContactNumber" value="<%= patient.Patient_ContactNumber %>" required pattern="[0-9]{11}">
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" id="address" name="Patient_Address" value="<%= patient.Patient_Address %>" required>
            </div>
            <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>

    <script>
        // Get the modal and close button
        var closeBtn = document.querySelector('.close');

        // Redirect to patients page when the close button (X) is clicked
        closeBtn.onclick = function() {
            window.location.href = "/staff/patients";  // Redirect to patients page
        }
    </script>
</body>
</html>
