<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients Record</title>
    <!-- Linking Google Font Link For Icons --> 
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=groups" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=today" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/staff/patients.css">
</head>
<body>
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="/image/logo.png" alt="logo">
            <h3>Bgry. Clinic Appointment</h3>
        </div>
        <ul class="sidebar-links">
            <h4>
                <span>Main Menu</span>
                <div class="menu-separator"></div>
            </h4>
            <li><a href="Staffdashboard"><span class="material-symbols-outlined">Dashboard</span>Dashboard</a></li>
            <li><a href="appointment"><span class="material-symbols-outlined">today</span>Appointments</a></li>
            <li><a href="patients"><span class="material-symbols-outlined">groups</span>Patients Record</a></li>
            <li><a href="/login"><span class="material-symbols-outlined">Logout</span>Logout</a></li> 
        </ul>
        <div class="user-account">
            <div class="user-profile">
                <img src="/image/taylor.png" alt="profile-img">
                <div class="user-detail">
                    <h3>Taylor Swift</h3>
                    <span>Clinic Staff</span>
                </div>
            </div>
        </div>
    </aside>

    <main class="main-content p-4 w-100">
        <div class="sticky-header">
            <h2>Patients Record</h2>
            <!-- Add New Patient Button -->
            <button id="addPatientBtn" class="btn btn-primary">
                <span class="material-symbols-outlined">add</span> Add New Patient
            </button>
        </div>
    
        <!-- Patient Form Modal -->

        <div id="patientModal" class="modal">
            <div class="modal-content">
                <span id="closeModal" class="close">&times;</span>
                <h3>Add New Patient</h3>
                <form action="/staff/addPatient" method="POST">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" name="Patient_FirstName" required>
    
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" name="Patient_LastName" required>
    
                    <label for="gender">Gender:</label>
                    <select id="gender" name="Patient_Gender" required>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
    
                    <label for="dob">Date of Birth:</label>
                    <input type="date" id="dob" name="DateofBirth" required>
    
                    <label for="contactNumber">Contact Number:</label>
                    <input type="tel" id="contactNumber" name="Patient_ContactNumber" required pattern="[0-9]{10}">
    
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="Patient_Address" required>
    
                    <button type="submit" class="btn btn-success">Add Patient</button>
                </form>
            </div>
        </div>
    

    </main>
    
    <script>
        // JavaScript to handle modal display
        document.getElementById("addPatientBtn").onclick = function() {
            document.getElementById("patientModal").style.display = "block";
        };
    
        document.getElementById("closeModal").onclick = function() {
            document.getElementById("patientModal").style.display = "none";
        };
    
        window.onclick = function(event) {
            if (event.target == document.getElementById("patientModal")) {
                document.getElementById("patientModal").style.display = "none";
            }
        };
    </script>
    

        <!-- Patient Records Table -->

         <div class="patient-table">
            <h3>Existing Patients</h3>
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Date of Birth</th>
                        <th>Contact Number</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>

       
    </main>
</body>
</html>
