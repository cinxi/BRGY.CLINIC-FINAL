<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment</title>

    <!-- Linking Google Font Link For Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=groups" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=today" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/staff/appointment.css">
</head>
<body>
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="/image/logo.png" alt="logo">
            <h3>Bgry. Clinic Appointment</h3>
        </div>
        <ul class="sidebar-links">
            <h4>
                <span>Main Menu</span>
                <div class="menu-separator"></div>
            </h4>
            <li>
                <a href="Staffdashboard"><span class="material-symbols-outlined">Dashboard</span>Dashboard</a>
            </li>
            <li>
                <a href="appointment"><span class="material-symbols-outlined">today</span> Appointments</a>
            </li>
            <li>
                <a href="/staff/patients"><span class="material-symbols-outlined">groups</span> Patients Record</a>
            </li>
            <li>
                <a href="/login"><span class="material-symbols-outlined">Logout</span>Logout</a>
            </li> 
        </ul>
        <div class="user-account">
            <div class="user-profile">
                <img src="/image/taylor.png" alt="profile-img">
                <div class="user-detail">
                    <h3>Taylor Swift</h3>
                    <span>Clinic Staff</span>
                </div>
            </div>
        </div>
    </aside>

    <main class="main-content p-4 w-100">
        <div class="sticky-header">
            <h2>Appointments</h2>
        </div>

        <!-- Appointment Form -->
        <section class="appointment-form">
            <h3>Schedule New Appointment</h3>
            <form action="/staff/addAppointment" method="POST">
                <div class="form-group">
                    <label for="patient_id">Patient ID:</label>
                    <input type="number" name="Patient_ID" id="patient_id" required>
                </div>
                <div class="form-group">
                    <label for="users_id">Users ID (Staff):</label>
                    <input type="number" name="User_ID" id="users_id" required>
                </div>
                <div class="form-group">
                    <label for="appointment_date">Appointment Date:</label>
                    <input type="date" name="Appointment_Date" id="appointment_date" required>
                </div>
                <div class="form-group">
                    <label for="appointment_time">Appointment Time:</label>
                    <input type="time" name="Appointment_Time" id="appointment_time" required>
                </div>
                <div class="form-group">
                    <label for="appointment_purpose">Appointment Purpose:</label>
                    <input type="text" name="Appointment_Purpose" id="appointment_purpose" required>
                </div>
                <div class="form-group">
                    <label for="appointment_status">Appointment Status:</label>
                    <select name="Appointment_Status" id="appointment_status" required>
                        <option value="Scheduled">Scheduled</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <button type="submit">Add Appointment</button>
            </form>
        </section>

        <!-- Existing Appointments -->
        <section class="appointments-list">
            <h3>Existing Appointments</h3>
            <table>
                <thead>
                    <tr>
                        <th>Patient ID</th>
                        <th>Staff ID</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Purpose</th>
                        <th>Status</th>
                    </tr>
                </thead>
               
            </table>
        </section>
    </main>
</body>
</html>
