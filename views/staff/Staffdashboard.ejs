<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Linking Google Font Link For Icons --> 
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/staff/dashboard.css">
</head>
<body>
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="/image/logo.png" alt="logo">
            <h3>Brgy. Clinic Appointment</h3>
        </div>
        <ul class="sidebar-links">
            <h4>
                <span>Main Menu</span>
                <div class="menu-separator"></div>
            </h4>
            <li>
                <a href="Staffdashboard"><span class="material-symbols-outlined">dashboard</span>Dashboard</a>
            </li>
            <li>
                <a href="appointment"><span class="material-symbols-outlined">today</span>Appointments</a>
            </li>
            <li>
                <a href="patients"><span class="material-symbols-outlined">groups</span>Patients Record</a>
            </li>
            <li>
                <a href="/login"><span class="material-symbols-outlined">logout</span>Logout</a>
            </li> 
        </ul>
        <div class="user-account">
            <div class="user-profile">
                <img src="/image/taylor.png" alt="profile-img">
                <div class="user-detail">
                    <h3>Taylor Swift</h3>
                    <span>Clinic Staff</span>
                </div>
            </div>
        </div>
    </aside>

    <main class="main-content p-4 w-100">
        <div class="sticky-header">
            <h2>Dashboard</h2>
        </div>

        <!-- Dashboard Content -->
        <div class="dashboard-stats">
            <!-- Total Patients -->
            <div class="card">
                <h3>Total Patients</h3>
                <div class="stat-number" id="totalPatients">
                    <!-- The value will be dynamically populated by the backend -->
                    <span>Loading...</span>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Fetch the total number of patients from the backend
        fetch('/staff/getTotalPatients') // Assuming you have a route for fetching this data
            .then(response => response.json())
            .then(data => {
                document.getElementById('totalPatients').innerText = data.totalPatients;
            })
            .catch(error => {
                console.error('Error fetching total patients:', error);
                document.getElementById('totalPatients').innerText = 'Error loading data';
            });
    </script>
</body>
</html>
