<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Registration</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/patient/register.css"> <!-- Link to external CSS file -->
</head>
<body>

<div class="container">
    <h2 class="header">Patient Registration</h2>

    <form action="/register-patient" method="post" id="registrationForm">
        <div class="main-group">
            <div class="left-group">
                <div class="name-group">
                    <div class="form-group"> 
                        <label for="firstName">Firstname</label>
                        <input name="firstName_data" type="text" class="form-control" id="firstName" required>
                    </div>

                    <div class="form-group">
                        <label for="lastName">Lastname</label>
                        <input name="lastName_data" type="text" class="form-control" id="lastName" required>
                    </div>
                </div>

                <div class="dateGender-group">
                    <div class="form-group">
                        <label for="birthdate">Birthdate</label>
                        <input name="birthdate_data" type="date" class="form-control" id="birthdate" required>
                    </div>

                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select class="form-control" name="gender_data" id="gender" required>
                            <option value="">Select Gender</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="contactNumber">Contact Number:</label>
                    <input type="tel" 
                           class="form-control" 
                           id="contactNumber" 
                           name="contactNumber_data" 
                           pattern="[0-9]{11}" 
                           maxlength="11" 
                           minlength="11" 
                           required 
                           title="Contact number must be exactly 11 digits (e.g., 09123456789)">
                </div>

                <div class="form-group">
                    <label for="address">Address:</label>
                    <select class="form-control" name="address_data" id="address" required>
                        <option value="">Select Purok</option>
                        <option value="Purok-1">Purok-1</option>
                        <option value="Purok-2">Purok-2</option>
                        <option value="Purok-3">Purok-3</option>
                        <option value="Purok-4">Purok-4</option>
                        <option value="Purok-5">Purok-5</option>
                        <option value="Purok-6">Purok-6</option>
                        <option value="Purok-7">Purok-7</option>
                        <option value="Purok-8">Purok-8</option>
                        <option value="Purok-9">Purok-9</option>
                        <option value="Purok-10">Purok-10</option>
                        <option value="Purok-11">Purok-11</option>
                    </select>
                </div>

                
            </div>

            <div class="right-group">

            
            


            <div class="right-group">
                
            <div class="form-group">
                <label for="status">Status:</label>
                <input name="status" type="text" class="form-control" id="status" value="Active" readonly>
            </div>

            </div>
            
            <div class="right-group">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input name="Username_data" type="text" class="form-control" id="Username" required>
                </div>
               
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    <input name="Password_data" type="password" class="form-control" id="Password" required>
                </div>
                
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input name="ConfirmPassword_data" type="password" class="form-control" id="confirmPassword" required>
                </div>


            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
        <br>
        <a href="login"> Already have an account?</a>

    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
// Add simple client-side validation for password confirmation
document.getElementById('registrationForm').addEventListener('submit', function(event) {
    const password = document.getElementById('Password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;

    if (password !== confirmPassword) {
        event.preventDefault();
        alert('Passwords do not match!');
    }
});
</script>

</body>
</html>
