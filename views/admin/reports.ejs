<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Reports</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/admin/reports.css"> 
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="user-account">
            <div class="user-profile">
                <img src="/image/profile-img.png" alt="profile-img">
                <div class="user-detail">
                    <h3>Sheina Labadan</h3>
                    <span>Admin</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="/image/brgy-logo.png" alt="logo">
            <h3>Brgy. Clinic Appointment</h3>
        </div>
        <ul class="sidebar-links">
            <div class="menu-separator"></div>
            <li><a href="Admindashboard"><span class="material-symbols-outlined">dashboard</span> Dashboard</a></li>
            <li><a href="usermanagement"><span class="material-symbols-outlined">manage_accounts</span>User Management</a></li>
            <li><a href="logs"><span class="material-symbols-outlined">history</span>Logs</a></li>
            <li><a href="reports"><span class="material-symbols-outlined"> insert_chart  </span> Reports</a></li>
            <li><a href="/login"><span class="material-symbols-outlined">logout</span>Logout</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="sticky-header">
            <h2>Clinic Reports</h2>
        </div>
    
        <!-- Metrics Section -->
        <section class="reports-metrics">
            <div class="metrics">
                <div class="metrics-group">
                   <div class="metric-box">
                    <h6>Total Appointments</h6>
                    <p>500</p>
                    </div>
                    <div class="metric-box">
                        <h6>Active Patients</h6>
                        <p>200</p>
                    </div> 
                </div>
                
                <div class="metrics-group">
                    <div class="metric-box">
                        <h6>Total Patients</h6>
                        <p>10</p>
                    </div>
                    <div class="metric-box">
                        <h6>Appointments Completed</h6>
                        <p>450</p>
                    </div>
                </div>
                
            </div>
    
            <div class="charts">
                <div class="chart">
                    <h4>Appointment Categories</h4>
                    <div class="chart-donut"></div>
                </div>
                <!-- <div class="chart">
                    <h4>Monthly Trends</h4>
                    <div class="chart-bar"></div>
                </div> -->
            </div>
        </section>
    </main>

        <div class="filters">
            <button class="btn btn-primary">Add Filter</button>
            <button class="btn btn-danger">Clear Filter</button>
        </div>
        <!-- Table Section -->
        <section class="reports-table">
            
    
            <table>
                <thead>
                    <tr>
                        <th>Appointment ID</th>
                        <th>Patient Name</th>
                        <th>Date</th>
                        <th>S.I.C</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>001</td>
                        <td>Jiyan Dela Cruz</td>
                        <td>2024-12-01</td>
                        <td>Santos</td>
                        <td>Completed</td>
                    </tr>
                    <tr>
                        <td>002</td>
                        <td>Maria Claire</td>
                        <td>2024-12-02</td>
                        <td>Ramos</td>
                        <td>Pending</td>
                    </tr>
                    <tr>
                        <td>003</td>
                        <td>Pedro Perez</td>
                        <td>2024-12-03</td>
                        <td>Bautista</td>
                        <td>Canceled</td>
                    </tr>
                </tbody>
            </table>
        </section>
    
</body>
</html>
