<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>

    <link rel="stylesheet" href="/css/admin/editUser.css">
</head>

<body>
    <div class="container">
        <div class="modal-header">
            <span class="close">&times;</span> <!-- Close button (X) -->       
        </div>

        <h2>Edit User Details</h2>
        <form action="/admin/editUser/<%= user.Users_ID %>" method="post">
            <div class="form-group">
                <label for="firstName">Firstname:</label>
                <input name="firstName_data" type="text" class="form-control" id="firstName" value="<%= user.FirstName %>" required>
            </div>
            <div class="form-group">
                <label for="lastName">Lastname:</label>
                <input name="lastName_data" type="text" class="form-control" id="lastName" value="<%= user.LastName %>" required>
            </div>

         

            <div class="form-actions">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
    </div>

    <script>
        // Get the modal and close button
        var closeBtn = document.querySelector('.close');

        // Redirect to user management page when the close button (X) is clicked
        closeBtn.onclick = function() {
            window.location.href = "/admin/usermanagement";  // Redirect to user management page
        }
    </script>
</body>
</html>
